<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.InviteSendingCtrl">
   <children>
      <Label fx:id="eventTitle" layoutX="73.0" layoutY="14.0" prefHeight="58.0" prefWidth="453.0" text="{EventTitle}">
         <font>
            <Font size="40.0" />
         </font>
      </Label>
      <Label fx:id="copyText" layoutX="71.0" layoutY="90.0" prefHeight="30.0" prefWidth="338.0" text="Give people the following invite code:">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label fx:id="inviteCode" layoutX="409.0" layoutY="90.0" prefHeight="30.0" prefWidth="126.0" text="{InviteCode}">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label fx:id="inviteText" layoutX="72.0" layoutY="162.0" prefHeight="30.0" prefWidth="454.0" text="Invite the following people by email (one per line):">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Button fx:id="copyInviteCodeButton" layoutX="535.0" layoutY="92.0" mnemonicParsing="false" onAction="#copyCode" text="copy" />
      <Button fx:id="cancel" layoutX="551.0" layoutY="426.0" mnemonicParsing="false" onAction="#cancelGoBack" prefHeight="51.0" prefWidth="51.0" />
      <Button fx:id="sendInviteButton" layoutX="406.0" layoutY="344.0" mnemonicParsing="false" onAction="#sendInvite" prefHeight="30.0" prefWidth="120.0" text="Send Invites">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Label fx:id="responseCopy" layoutX="512.0" layoutY="120.0" />
      <TextArea fx:id="mailInputField" layoutX="73.0" layoutY="200.0" prefHeight="136.0" prefWidth="454.0" promptText="Put your e-mail here, every line at most 1" />
      <ImageView fitHeight="39.0" fitWidth="39.0" layoutX="557.0" layoutY="432.0" mouseTransparent="true">
         <image>
            <Image url="@/images/return.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
