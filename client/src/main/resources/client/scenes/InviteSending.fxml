<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.InviteSendingCtrl">
   <children>
      <Label fx:id="EventTitle" layoutX="73.0" layoutY="14.0" prefHeight="58.0" prefWidth="453.0" text="{EventTitle}">
         <font>
            <Font size="40.0" />
         </font>
      </Label>
      <Label layoutX="71.0" layoutY="90.0" prefHeight="30.0" prefWidth="338.0" text="Give people the following invite code:">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label fx:id="InviteCode" layoutX="409.0" layoutY="90.0" prefHeight="30.0" prefWidth="126.0" text="{InviteCode}">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label layoutX="72.0" layoutY="162.0" prefHeight="30.0" prefWidth="454.0" text="Invite the following people by email (one per line):">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <TextArea fx:id="MailInputField" layoutX="73.0" layoutY="200.0" prefHeight="136.0" prefWidth="454.0" text="so here we can type the emails" />
      <Button fx:id="CopyInviteCodeButton" layoutX="526.0" layoutY="93.0" mnemonicParsing="false" onAction="#copyCode" text="copy" />
      <Button fx:id="SendInviteButton" layoutX="406.0" layoutY="344.0" mnemonicParsing="false" onAction="#sendInvite" prefHeight="30.0" prefWidth="120.0" text="Send Invites">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="cancel" layoutX="72.0" layoutY="347.0" mnemonicParsing="false" onAction="#cancelGoBack" text="Cancel" />
   </children>
</AnchorPane>
