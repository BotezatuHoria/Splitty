      <Button fx:id="settingButton" layoutX="534.0" layoutY="21.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" onAction="#showSettingsPage"/>
      <ImageView fitHeight="24.0" fitWidth="24.0" layoutX="537.0" layoutY="24.0" mouseTransparent="true">
         <image>
            <Image url="@/images/setting2.png" />
         </image>
      </ImageView>

   </children>
